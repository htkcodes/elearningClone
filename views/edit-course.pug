extends layout


block content

    .row
        .col-md-6.mt-5.offset-md-3
            h1.mb-4  Create Course
            form(method="POST")
              .form-group
                input.form-control(type='text', placeholder='Enter Course Title' name="title" value=course.title)
              .form-group
                input.form-control(placeholder='Enter Course Description' name="desc" type='text' value=course.desc)
              .form-group
                input.form-control(placeholder='Enter Course Price' name="price" type='number' value=course.price)
              .form-group
                input.form-control(placeholder='Enter Wistia ID' name="wistiaId" type='text' value=course.wistiaId)
                        
              button.btn.btn-primary.btn-raised(type='submit') Submit
                        
    